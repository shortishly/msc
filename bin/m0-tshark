CONTAINER_ID=$(docker compose ps --format json|jq -r '.[] | select(.Service == "m0").ID')
NET_SANDBOX=$(docker inspect --format '{{ .NetworkSettings.SandboxKey }}' "$CONTAINER_ID")

sudo nsenter --net="$NET_SANDBOX" tshark -f "port 3306" -V -w /tmp/m0-"$(date --iso-8601=seconds)".pcap
